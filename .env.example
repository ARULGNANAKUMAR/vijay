# FloatChat ARGO Environment Configuration
# Copy this file to .env and update the values

# Flask Configuration
SECRET_KEY=your-super-secret-key-change-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
DATABASE_URL=mysql://floatchat_user:secure_password_123@localhost/floatchat
MONGODB_URI=mongodb://localhost:27017/floatchat

# File Upload Configuration  
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# JWT Configuration
JWT_EXPIRATION_HOURS=24

# Vector Database Configuration
VECTOR_MODEL=all-MiniLM-L6-v2
VECTOR_DIMENSION=384

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=floatchat.log

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Production Settings (set for production deployment)
# SECRET_KEY=use-a-strong-random-secret-key
# FLASK_ENV=production
# FLASK_DEBUG=False
# DATABASE_URL=mysql://user:password@db-server/floatchat
# MONGODB_URI=mongodb://mongo-server:27017/floatchat
